{
    "name": "node-starter-kit",
    "version": "1.0.0",
    "description": "A minimal TypeScript starter kit for building Express APIs.",
    "main": "dist/index.js",
    "scripts": {
        "dev": "nodemon --watch src --ext ts --exec \"ts-node -r tsconfig-paths/register src/index.ts\"",
        "build": "tsc -p tsconfig.build.json",
        "start": "node dist/index.js",
        "test": "jest",
        "prisma:generate": "prisma generate",
        "db:seed": "ts-node -r tsconfig-paths/register prisma/seed.ts",
        "prisma:deploy": "prisma migrate deploy",
        "prisma:migrate": "prisma migrate dev",
        "prisma:studio": "prisma studio"
    },
    "dependencies": {
        "@prisma/client": "^5.17.0",
        "compression": "^1.7.4",
        "cors": "^2.8.5",
        "dotenv": "^16.4.7",
        "express": "^4.19.2",
        "helmet": "^7.1.0",
        "zod": "^3.23.8",
        "bcryptjs": "^2.4.3",
        "jsonwebtoken": "^9.0.2"
    },
    "devDependencies": {
        "@types/compression": "^1.7.5",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^29.5.12",
        "@types/node": "^20.12.12",
        "@types/supertest": "^2.0.12",
        "jest": "^29.7.0",
        "nodemon": "^3.1.0",
        "prisma": "^5.17.0",
        "supertest": "^6.3.3",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.6.3",
        "@types/bcryptjs": "^2.4.6",
        "@types/jsonwebtoken": "^9.0.5"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}