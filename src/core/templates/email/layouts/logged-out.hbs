<!doctype html>
<html lang="{{locale}}">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{subject}}</title>
    {{#if previewText}}
      <style type="text/css">
        .preview-text {
          display: none !important;
          visibility: hidden;
          opacity: 0;
          color: transparent;
          height: 0;
          width: 0;
        }
      </style>
    {{/if}}
  </head>
  <body style="background-color:#f3f4f6;margin:0;padding:24px;font-family:'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif;">
    {{#if previewText}}
      <div class="preview-text">{{previewText}}</div>
    {{/if}}
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" style="max-width:640px;margin:0 auto;background:#ffffff;border-radius:12px;overflow:hidden;box-shadow:0 10px 25px rgba(15,23,42,0.08);">
      {{> header}}
      <tr>
        <td style="padding:32px;">
          <h2 style="margin:0 0 24px 0;font-size:24px;line-height:32px;color:#111827;font-weight:700;text-align:center;">
            ðŸ‘‹ See You Soon!
          </h2>
          
          {{#if greeting}}
            <p style="margin:0 0 20px 0;font-size:16px;line-height:24px;color:#111827;font-weight:500;">{{greeting}}</p>
          {{/if}}
          
          <div style="background:#f0f9ff;border:1px solid #bfdbfe;border-radius:8px;padding:20px;margin:24px 0;text-align:center;">
            <p style="margin:0 0 16px 0;font-size:15px;line-height:22px;color:#1e40af;font-weight:600;">
              âœ… You have successfully logged out
            </p>
            {{#if timestamp}}
              <p style="margin:0;font-size:14px;line-height:20px;color:#3b82f6;font-family:monospace;">
                {{timestamp}}
              </p>
            {{/if}}
          </div>
          
          {{#each intro}}
            <p style="margin:0 0 16px 0;font-size:15px;line-height:22px;color:#111827;">{{this}}</p>
          {{/each}}
          
          {{#each ctas}}
            <p style="margin:24px 0;text-align:center;">
              <a href="{{url}}" style="background:#2563eb;color:#ffffff;padding:14px 28px;border-radius:8px;text-decoration:none;font-weight:600;display:inline-block;font-size:16px;">
                {{label}}
              </a>
            </p>
          {{/each}}
          
          {{#each outro}}
            <p style="margin:0 0 16px 0;font-size:15px;line-height:22px;color:#111827;">{{this}}</p>
          {{/each}}
          
          <div style="margin:32px 0;padding:20px;background:#fef3c7;border-left:4px solid #f59e0b;border-radius:0 8px 8px 0;">
            <p style="margin:0 0 8px 0;font-size:14px;line-height:20px;color:#92400e;font-weight:600;">
              ðŸ”’ Security Tip
            </p>
            <p style="margin:0;font-size:14px;line-height:20px;color:#92400e;">
              If you didn't initiate this logout, please secure your account immediately by changing your password.
            </p>
          </div>
          
          {{#if footerNote}}
            <p style="margin:24px 0 0 0;font-size:14px;line-height:20px;color:#6b7280;text-align:center;">{{footerNote}}</p>
          {{/if}}
        </td>
      </tr>
      {{> footer}}
    </table>
  </body>
</html>
