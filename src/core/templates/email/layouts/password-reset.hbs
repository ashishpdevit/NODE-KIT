<!doctype html>
<html lang="{{locale}}">
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{{subject}}</title>
    {{#if previewText}}
      <style type="text/css">
        .preview-text {
          display: none !important;
          visibility: hidden;
          opacity: 0;
          color: transparent;
          height: 0;
          width: 0;
        }
      </style>
    {{/if}}
  </head>
  <body style="background-color:#f3f4f6;margin:0;padding:24px;font-family:'Segoe UI',Roboto,'Helvetica Neue',Arial,sans-serif;">
    {{#if previewText}}
      <div class="preview-text">{{previewText}}</div>
    {{/if}}
    <table role="presentation" width="100%" cellspacing="0" cellpadding="0" style="max-width:640px;margin:0 auto;background:#ffffff;border-radius:12px;overflow:hidden;box-shadow:0 10px 25px rgba(15,23,42,0.08);">
      {{> header}}
      <tr>
        <td style="padding:32px;">
          <h2 style="margin:0 0 24px 0;font-size:24px;line-height:32px;color:#111827;font-weight:700;text-align:center;">
            üîê Password Reset Request
          </h2>
          
          {{#if greeting}}
            <p style="margin:0 0 20px 0;font-size:16px;line-height:24px;color:#111827;font-weight:500;">{{greeting}}</p>
          {{/if}}
          
          <div style="background:#f8fafc;border:1px solid #e2e8f0;border-radius:8px;padding:20px;margin:24px 0;text-align:center;">
            <p style="margin:0 0 16px 0;font-size:15px;line-height:22px;color:#475569;">
              Use the following reset code to change your password:
            </p>
            <div style="background:#1e293b;color:#ffffff;padding:16px 24px;border-radius:8px;margin:16px 0;font-family:monospace;font-size:18px;font-weight:600;letter-spacing:1px;word-break:break-all;">
              {{resetToken}}
            </div>
            <p style="margin:16px 0 0 0;font-size:14px;line-height:20px;color:#64748b;">
              This code will expire on <strong>{{expiresAt}}</strong>
            </p>
          </div>
          
          {{#each intro}}
            <p style="margin:0 0 16px 0;font-size:15px;line-height:22px;color:#111827;">{{this}}</p>
          {{/each}}
          
          <div style="margin:32px 0;padding:20px;background:#fef3c7;border-left:4px solid #f59e0b;border-radius:0 8px 8px 0;">
            <p style="margin:0 0 8px 0;font-size:14px;line-height:20px;color:#92400e;font-weight:600;">
              ‚ö†Ô∏è Security Notice
            </p>
            <p style="margin:0;font-size:14px;line-height:20px;color:#92400e;">
              If you didn't request this password reset, please ignore this email. Your password will remain unchanged.
            </p>
          </div>
          
          {{#each outro}}
            <p style="margin:0 0 16px 0;font-size:15px;line-height:22px;color:#111827;">{{this}}</p>
          {{/each}}
          
          {{#if footerNote}}
            <p style="margin:24px 0 0 0;font-size:14px;line-height:20px;color:#6b7280;text-align:center;">{{footerNote}}</p>
          {{/if}}
        </td>
      </tr>
      {{> footer}}
    </table>
  </body>
</html>
